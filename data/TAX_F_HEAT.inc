TAX_F_HEAT(Y,'FINLAND',G)$((GDATA(G,'GDTYPE') EQ GBPR) OR (GDATA(G,'GDTYPE') EQ GEXT)) =                                                                                                                                                                                                                              
                                                                                                                                                                                                                                                                         0        ;                                   
* CHP in Denmark are taxed through parameter TAX_F and TAX_G_HEAT                                                                                                                                                                                                                                                     
TAX_F_HEAT(Y,'DENMARK',G)$((GDATA(G,'GDTYPE') EQ GBPR) OR (GDATA(G,'GDTYPE') EQ GEXT)) =                                                                                                                                                                                                                              
                                                                                                                                                                                                                                                                         0        ;                                   
