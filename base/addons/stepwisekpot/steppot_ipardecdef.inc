PARAMETER IGKFX_KPOTSTEP(Y,AAA,G,KPOTSTEP) 'Exogenous capacity divided per KPOTSTEP';
PARAMETER IKPOTSTEP_FLHA(AAA,G,KPOTSTEP);

IGKFX_KPOTSTEP(Y,IA,G,KPOTSTEP)$SUM(TECH_GROUP$(GDATA(G,'GDTECHGROUP') EQ TECH_GROUP_VALUE(TECH_GROUP)), TECHGROUPKPOT_STEP(IA,TECH_GROUP,KPOTSTEP))
                         = GKFX(Y,IA,G) * SUM(TECH_GROUP$(GDATA(G,'GDTECHGROUP') EQ TECH_GROUP_VALUE(TECH_GROUP)), TECHGROUPKPOT_STEP(IA,TECH_GROUP,KPOTSTEP) );

IGKFX_KPOTSTEP(Y,IA,G,KPOTSTEP)$SUM((TECH_GROUP,IR)$(RRRAAA(IR,IA) AND (GDATA(G,'GDTECHGROUP') EQ TECH_GROUP_VALUE(TECH_GROUP))), TECHGROUPKPOT_STEP(IR,TECH_GROUP,KPOTSTEP))
                         = GKFX(Y,IA,G) * SUM((TECH_GROUP,IR)$(RRRAAA(IR,IA) AND (GDATA(G,'GDTECHGROUP') EQ TECH_GROUP_VALUE(TECH_GROUP))), TECHGROUPKPOT_STEP(IR,TECH_GROUP,KPOTSTEP))   ;

IGKFX_KPOTSTEP(Y,IA,G,KPOTSTEP)$SUM((TECH_GROUP,C)$(ICA(C,IA) AND (GDATA(G,'GDTECHGROUP') EQ TECH_GROUP_VALUE(TECH_GROUP))), TECHGROUPKPOT_STEP(C,TECH_GROUP,KPOTSTEP))
                         = GKFX(Y,IA,G) * SUM((TECH_GROUP,C)$(ICA(C,IA) AND (GDATA(G,'GDTECHGROUP') EQ TECH_GROUP_VALUE(TECH_GROUP))), TECHGROUPKPOT_STEP(C,TECH_GROUP,KPOTSTEP))   ;

IKPOTSTEP_FLHA(IA,G,KPOTSTEP)$SUM(TECH_GROUP$(GDATA(G,'GDTECHGROUP') EQ TECH_GROUP_VALUE(TECH_GROUP)), KPOTSTEP_FLH(IA,TECH_GROUP,KPOTSTEP))
                         = SUM(TECH_GROUP$(GDATA(G,'GDTECHGROUP') EQ TECH_GROUP_VALUE(TECH_GROUP)), KPOTSTEP_FLH(IA,TECH_GROUP,KPOTSTEP));

IKPOTSTEP_FLHA(IA,G,KPOTSTEP)$SUM((TECH_GROUP,IR)$(RRRAAA(IR,IA) AND (GDATA(G,'GDTECHGROUP') EQ TECH_GROUP_VALUE(TECH_GROUP))), KPOTSTEP_FLH(IR,TECH_GROUP,KPOTSTEP))
                         = SUM((TECH_GROUP,IR)$(RRRAAA(IR,IA) AND (GDATA(G,'GDTECHGROUP') EQ TECH_GROUP_VALUE(TECH_GROUP))), KPOTSTEP_FLH(IR,TECH_GROUP,KPOTSTEP));

IKPOTSTEP_FLHA(IA,G,KPOTSTEP)$SUM((TECH_GROUP,C)$(ICA(C,IA) AND (GDATA(G,'GDTECHGROUP') EQ TECH_GROUP_VALUE(TECH_GROUP))), KPOTSTEP_FLH(C,TECH_GROUP,KPOTSTEP))
                         = SUM((TECH_GROUP,C)$(ICA(C,IA) AND (GDATA(G,'GDTECHGROUP') EQ TECH_GROUP_VALUE(TECH_GROUP))),  KPOTSTEP_FLH(C,TECH_GROUP,KPOTSTEP));
